{
  "extends": "./tsconfig.packages.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "ui/*": ["./packages/ui/src/*"],
      "common/*": ["./packages/common/src/*"],
      "common-frontend/*": ["./packages/common-frontend/src/*"],
      "common-backend/*": ["./packages/common-backend/src/*"],
      "constants/*": ["./packages/constants/src/*"],

      "blog-frontend/*": ["./entries/blog-frontend/src/*"],
      "blog-backend/*": ["./entries/blog-backend/src/*"],
      "auth-frontend/*": ["./entries/auth-frontend/src/*"],
      "auth-backend/*": ["./entries/auth-backend/src/*"],
      "admin-frontend/*": ["./entries/admin-frontend/src/*"]
    },
    "isolatedModules": false
  },
  "exclude": ["**/*.spec.ts", "./public/**/*"]
}
